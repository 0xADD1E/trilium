    "sqlite": "^2.9.0",
    "ws": "^3.3.2"
  },
  "devDependencies": {
    "electron-compile": "^6.4.2",
    "electron-packager": "^8.0.0",
    "electron-prebuilt-compile": "1.8.2-beta.2",
    "electron-rebuild": "^1.6.0",
    "tape": "^4.8.0",
    "xo": "^0.18.0"
  },
  "config": {
    "forge": {
      "make_targets": {
        "win32": [
          "squirrel"
        ],
        "darwin": [
          "zip"
        ],
        "linux": [
          "deb",
          "rpm"
        ]
      },
      "electronPackagerConfig": {
        "packageManager": "npm"
      },
      "electronWinstallerConfig": {
        "name": "trilium"
      },
      "electronInstallerDebian": {},
      "electronInstallerRedhat": {},
      "github_repository": {
        "owner": "",
        "name": ""
      },
      "windowsStoreConfig": {
        "packageName": "",
        "name": "trilium"
      }
    }
  },
  "xo": {
    "envs": [
      "node",
      "browser"
    ]
  }
